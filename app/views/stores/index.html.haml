.page-header
  = link_to new_store_path, class: 'btn btn-primary' do
    %span.glyphicon.glyphicon-plus
    New Store
  %h1 Listing stores

.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th Name
        %th Lat
        %th Lng
        %th Owner
        %th Rating
        %th{colspan: 3}

    %tbody
      - @stores.each do |store|
        %tr
          %td= store.name
          %td= store.lat
          %td= store.lng
          %td= store.owner
          %td= store.rating
          %td
            = link_to store do
              %span.glyphicon.glyphicon-ok
          %td
            = link_to edit_store_path(store) do
              %span.glyphicon.glyphicon-pencil
          %td
            = link_to store, data: { confirm: 'Are you sure?' }, method: :delete do
              %span.glyphicon.glyphicon-remove
